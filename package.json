{
  "name": "f1-racing-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "deploy": "node scripts/deploy.js",
    "dev": "next dev",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "health-check": "curl -f http://localhost:3000 || exit 1",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "notify": "node scripts/notify.js",
    "post-deploy": "node scripts/post-deploy.js",
    "release": "npm version patch && git push && git push --tags",
    "rollback": "node scripts/rollback.js",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "node scripts/test-e2e.js",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@testing-library/dom": "latest",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fs": "latest",
    "https": "latest",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "path": "latest",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^4.1.9",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "audit-ci": "^7.1.0",
    "bundlesize": "^0.18.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5",
    "prettier": "^3.4.2",
    "typescript": "^5",
    "vercel": "^37.14.0",
    "wait-on": "^8.0.1"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250kb"
    },
    {
      "path": ".next/static/css/*.css",
      "maxSize": "50kb"
    }
  ]
}